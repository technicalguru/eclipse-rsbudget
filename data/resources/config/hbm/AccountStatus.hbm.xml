<?xml version="1.0" encoding="UTF-8"?>
<!-- 
   Hibernate XML Mapping File
-->
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
   <class name="rsbudget.data.dto.AccountStatusDTO" table="account_status" batch-size="300">
		<id name="id" column="id" type="long" >
			<generator class="native"/>
		</id>

		<many-to-one name="account" class="rsbudget.data.dto.AccountDTO" column="account"/> 
		<property name="timestamp" type="RsDate" column="date_of_status"/>
		<property name="balance" type="big_decimal" column="balance"/>
		<property name="creationDate" type="RsDate" column="creation_date"/>
		<property name="changeDate" type="RsDate" column="change_date"/>
	</class>
</hibernate-mapping>